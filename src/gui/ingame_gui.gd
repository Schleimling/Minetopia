extends Control

@onready var money_label: Label = $CenterContainer/Money
@onready var depth_meter: Label = $DepthMeter

var money_text: String = "Money: "
var money_suffix: String = "$"

var money: float = 2.0

func _ready() -> void:
	update_money(0)

func add_money(amount_to_add: float) -> void:
	money += amount_to_add
	update_money(money)

func remove_money(amount_to_remove: float) -> void:
	money -= amount_to_remove
	if money < 0:
		money = 0
	update_money(money)

func update_money(current_amount: float) -> void:
	money = current_amount
	money_label.text = money_text + str(money) + money_suffix

func _update_depth_meter(new_depth: float) -> void:
	depth_meter.text = "Depth: " + str(round_to_dec(-new_depth / 32, 1))

